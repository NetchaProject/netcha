<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/sign_in_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/happydog3" />

    <TextView
        android:id="@+id/sign_in_tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signin_page_main_title"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/chosun_font"
        android:textSize="30sp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sign_in_tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="200dp"
        android:text="@string/signin_page_sub_title"
        android:fontFamily="@font/citizen_font1"
        android:textSize="50sp"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_tv_title1" />

    <TextView
        android:id="@+id/sign_in_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chosun_font"
        android:text="@string/signin_page_tv_id"
        android:textSize="18sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_tv_title2" />

    <EditText
        android:id="@+id/sign_in_et_id"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_round_shape"
        android:ems="10"
        android:paddingStart="15dp"
        android:inputType="text"
        android:fontFamily="@font/chosun_font"
        android:hint="@string/signin_page_et_id_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_tv_id" />

    <TextView
        android:id="@+id/sign_in_tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chosun_font"
        android:text="@string/signin_page_tv_pw"
        android:textSize="18sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_et_id" />

    <EditText
        android:id="@+id/sign_in_et_pw"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_round_shape"
        android:paddingStart="15dp"
        android:fontFamily="@font/chosun_font"
        android:hint="@string/signin_page_et_pw_hint"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_tv_pw" />

    <TextView
        android:id="@+id/sign_in_tv_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_user_data_user_find_tv_fail"
        android:layout_marginTop="3dp"
        android:visibility="invisible"
        android:fontFamily="@font/chosun_font"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_et_pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/sign_in_btn_login"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/yellow"
        android:text="@string/signin_page_btn_login"
        android:fontFamily="@font/chosun_font"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_et_pw" />


    <Button
        android:id="@+id/sign_in_btn_join"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/yellow"
        android:text="@string/signin_page_btn_join"
        android:fontFamily="@font/chosun_font"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_btn_login" />

    <Button
        android:id="@+id/sign_in_btn_find"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/chosun_font"
        android:text="@string/signin_page_btn_find"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_btn_join" />

</androidx.constraintlayout.widget.ConstraintLayout>