<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".UserDataFind">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/user_find_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/signin_page_btn_find"
        android:theme="@style/main_page_toolbar_font"
        app:titleTextColor="@color/yellow"
        app:titleTextAppearance="@style/main_page_toolbar_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/user_find_iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:src="@drawable/happydog5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/user_find_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:fontFamily="@font/chosun_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_find_iv1"/>

    <TextView
        android:id="@+id/user_find_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="25sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_find_title" />


    <EditText
        android:id="@+id/user_find_et_id"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_round_shape"
        android:ems="10"
        android:paddingStart="15dp"
        android:inputType="textEmailAddress"
        android:hint="이름을 입력하세요"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_find_tv_name" />

    <Button
        android:id="@+id/user_find_btn_login"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/yellow"
        android:text="확인"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_find_et_id" />

    <TextView
        android:id="@+id/user_find_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디: "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_find_btn_login"/>

    <TextView
        android:id="@+id/user_find_tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:text="비밀번호: "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_find_tv_id"/>

    <ImageView
        android:id="@+id/user_find_iv_fail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_find_btn_login"
        android:src="@drawable/happydog4"
        />

    <TextView
        android:id="@+id/user_find_tv_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:text="입력하신 정보가 존재하지 않습니다."
        android:textColor="@color/red"
        android:visibility="visible"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_find_tv_pw"/>


</androidx.constraintlayout.widget.ConstraintLayout>