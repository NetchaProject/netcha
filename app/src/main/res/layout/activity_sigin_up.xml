<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_text"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/chosun_font"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/up_netcha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/up_netcha_text"
        android:textColor="@color/yellow"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/chosun_font"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up"/>

    <TextView
        android:id="@+id/up_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/up_name_text"
        android:fontFamily="@font/chosun_font"
        android:textColor="@color/yellow"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_netcha" />


    <EditText
        android:id="@+id/up_name_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/sign_up_edit_text"
        android:hint="@string/up_name_edit_text"
        android:fontFamily="@font/chosun_font"
        android:paddingLeft="20dp"
        android:layout_marginLeft="15dp"
        android:inputType="text"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/up_name"/>


    <TextView
        android:id="@+id/up_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/up_id_text"
        android:textColor="@color/yellow"
        android:fontFamily="@font/chosun_font"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_name_edit" />


    <EditText
        android:id="@+id/up_id_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/sign_up_edit_text"
        android:hint="@string/up_id_edit_text"
        android:inputType="text"
        android:fontFamily="@font/chosun_font"
        android:paddingLeft="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/up_id"/>

    <Button
        android:id="@+id/up_id_check"
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:text="@string/up_check_button"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/chosun_font"
        android:layout_marginVertical="36dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/yellow"
        app:layout_constraintRight_toRightOf="@id/up_id"
        app:layout_constraintTop_toBottomOf="@+id/up_name_edit"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/up_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/up_pw_text"
        android:fontFamily="@font/chosun_font"
        android:textColor="@color/yellow"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_id_edit" />

    <EditText
        android:id="@+id/up_pw_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_up_edit_text"
        android:fontFamily="@font/chosun_font"
        android:hint="@string/up_pw_edit_text"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/up_pw" />

    <TextView
        android:id="@+id/up_pw_error_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chosun_font"
        android:visibility="invisible"
        android:text="비밀번호의 조건이 맞지 않습니다."
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/up_id_edit"
        android:layout_marginVertical="40dp"
        android:layout_marginRight="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/up_button"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/yellow"
        android:fontFamily="@font/chosun_font"
        android:text="@string/up_sign_up_button"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_pw_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>