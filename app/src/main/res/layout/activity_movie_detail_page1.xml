<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MovieDetailPage1">
    <ImageView
        android:id="@+id/detailpage1_btn_back"
        android:layout_width="51dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />


    <TextView
        android:id="@+id/detailpage1_text_moviedetail"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:layout_marginEnd="140dp"
        android:fontFamily="@font/chosun_font"
        android:text="@string/movie_detail"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <TextView
        android:id="@+id/detailpage1_text_pregview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/chosun_font"
        android:text="@string/movie_detail_preview"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/detailpage1_text_moviedetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/detailpage1_image_preview1"
        android:layout_width="320dp"
        android:layout_height="160dp"
        android:src="@drawable/detailpage_moviescene1"
        app:layout_constraintBottom_toTopOf="@+id/detailpage1_nestedScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailpage1_text_moviedetail"
        app:layout_constraintVertical_bias="0.173" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/detailpage1_nestedScrollView"
        android:layout_width="339dp"
        android:layout_height="333dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.804">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailpage1_contentAreaWrapper1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detailpage1_constraintLayout1"
                android:layout_width="146dp"
                android:layout_height="179dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/detailpage_btn_begie"
                app:layout_constraintBottom_toTopOf="@+id/detailpage1_constraintLayout_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.098"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/detailpage1_text_actor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/chosun_font"
                    android:text="@string/movie_detail_actor"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.133"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/detailpage1_img_actor1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/main_page_profile_shape"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/detailpage_movie1_character1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailpage1_text_actor" />

                <TextView
                    android:id="@+id/detailpage1_actor1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chosun_font"
                    android:text="김다미"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/detailpage1_img_actor1"
                    app:layout_constraintStart_toStartOf="@+id/detailpage1_img_actor1"
                    app:layout_constraintTop_toBottomOf="@+id/detailpage1_img_actor1" />

                <TextView
                    android:id="@+id/detailpage1_actor2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/chosun_font"
                    android:text="조민수"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/detailpage1_img_actor2"
                    app:layout_constraintStart_toStartOf="@+id/detailpage1_img_actor2"
                    app:layout_constraintTop_toBottomOf="@+id/detailpage1_img_actor2" />

                <ImageView
                    android:id="@+id/detailpage1_img_actor2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/main_page_profile_shape"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/detailpage_movie1_character2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/detailpage1_img_actor1"
                    app:layout_constraintTop_toBottomOf="@+id/detailpage1_text_actor" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="155dp"
                android:layout_height="187dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/detailpage_btn_purple"
                android:id="@+id/detailpage1_constraintLayout_2"
                app:layout_constraintBottom_toTopOf="@+id/detailpage1_constraintLayout_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.945"
                app:layout_constraintStart_toStartOf="parent">


                <TextView
                    android:id="@+id/detailpage1_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/chosun_font"
                    android:text="@string/movie_detail_rating"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.069"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RatingBar
                    android:id="@+id/detailpage1_ratingBar"
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                    android:layout_width="81dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="12dp"
                    android:numStars="5"
                    android:rating="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.081"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailpage1_rating" />

                <TextView
                    android:id="@+id/detailpage1_rating_review"
                    android:layout_width="142dp"
                    android:layout_height="44dp"
                    android:text="@string/ratingreview_movie1_detailpage"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.461"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailpage1_ratingBar"
                    app:layout_constraintVertical_bias="0.098" />

                <TextView
                    android:id="@+id/detailpage1_rating_reviewer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating_movie1_detailpage"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.939"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailpage1_rating_review"
                    app:layout_constraintVertical_bias="0.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detailpage1_constraintLayout_3"
                android:layout_width="146dp"
                android:layout_height="179dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/detailpage_btn_red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.098"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/detailpage1_summury"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/chosun_font"
                    android:text="@string/movie_detail_plot"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/detailpage1_summury_detail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.112"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/detailpage1_summury_detail"
                    android:layout_width="122dp"
                    android:layout_height="112dp"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/chosun_font"
                    android:maxLines="6"
                    android:text="@string/detialpage_summary_movie1"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/view_more"
                    android:layout_width="41dp"
                    android:layout_height="18dp"
                    android:layout_margin="10dp"
                    android:layout_marginEnd="79dp"
                    android:fontFamily="@font/titlefont"
                    android:gravity="center"
                    android:text="@string/detailpage_more"
                    android:textColor="@color/green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/detailpage1_summury"
                    app:layout_constraintStart_toStartOf="@+id/detailpage1_summury_detail" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detailpage1_constraintLayout_4"
                android:layout_width="146dp"
                android:layout_height="179dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/deatailpage_btn_yellow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.921"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/detialpage1_famous_sense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/chosun_font"
                    android:text="@string/movie_detail_sense"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/detialpage1_img_famoussense"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.149"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/detialpage1_img_famoussense"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:src="@drawable/detailpage1_image_sense" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>